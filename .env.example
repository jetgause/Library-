# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# 
# ⚠️  SECURITY WARNING ⚠️
# 
# 1. NEVER commit your actual .env file to version control!
# 2. This is a template file - copy it to .env and fill in your actual values
# 3. Ensure .env is listed in your .gitignore file
# 4. Never share your .env file or expose it publicly
# 
# To create your local .env file:
#   cp .env.example .env
# 
# Then edit .env with your actual configuration values.
# =============================================================================

# -----------------------------------------------------------------------------
# SECRET KEY CONFIGURATION
# -----------------------------------------------------------------------------
# 
# Your SECRET_KEY must be a long, random, unpredictable string.
# NEVER use the default value in production!
# 
# Generate a secure SECRET_KEY using one of these methods:
# 
# Method 1 (Python):
#   python -c "import secrets; print(secrets.token_urlsafe(50))"
# 
# Method 2 (OpenSSL):
#   openssl rand -base64 50
# 
# Method 3 (Django):
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# -----------------------------------------------------------------------------
# ENVIRONMENT SETTINGS
# -----------------------------------------------------------------------------
# 
# Set to 'development', 'staging', or 'production'
# In production, this affects DEBUG mode and security settings
# 
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# DEBUG MODE
# -----------------------------------------------------------------------------
# 
# Set to 'True' for development, 'False' for production
# ⚠️  NEVER set DEBUG=True in production! It exposes sensitive information.
# 
DEBUG=True

# -----------------------------------------------------------------------------
# ALLOWED HOSTS
# -----------------------------------------------------------------------------
# 
# Comma-separated list of allowed hostnames/domains
# Example: localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
# In production, specify exact domains - do NOT use wildcards like '*'
# 
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# API HOST CONFIGURATION
# -----------------------------------------------------------------------------
# 
# The host address where the API server will listen
# Use 127.0.0.1 for local development (localhost only)
# Use 0.0.0.0 to accept connections from any network interface
# 
API_HOST=127.0.0.1
API_PORT=8000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# 
# Configure your database connection settings
# Supported databases: PostgreSQL, MySQL, SQLite, etc.
# 
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=library_db
DATABASE_USER=library_user
DATABASE_PASSWORD=your-database-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# For SQLite (development only):
# DATABASE_ENGINE=django.db.backends.sqlite3
# DATABASE_NAME=db.sqlite3

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing) CONFIGURATION
# -----------------------------------------------------------------------------
# 
# Controls which domains can make requests to your API
# 
# ⚠️  SECURITY WARNING: Never use CORS_ALLOW_ALL_ORIGINS=True in production!
# ⚠️  Never use wildcard '*' for CORS_ALLOWED_ORIGINS in production!
# 
CORS_ALLOW_ALL_ORIGINS=False

# Comma-separated list of allowed origins (no wildcards)
# Example: http://localhost:3000,https://yourdomain.com
# 
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Allow credentials (cookies, authorization headers) in CORS requests
CORS_ALLOW_CREDENTIALS=True

# -----------------------------------------------------------------------------
# STATIC AND MEDIA FILES
# -----------------------------------------------------------------------------
# 
# Configure paths for static assets and user-uploaded media
# 
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------
# 
# Configure email backend for sending emails
# For development, use console backend to print emails to console
# 
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# 
# Configure Redis for caching and session storage
# 
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# 
# Set logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# 
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# THIRD-PARTY API KEYS (Optional)
# -----------------------------------------------------------------------------
# 
# Add your third-party service API keys here
# Never commit actual API keys to version control!
# 
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# 
# Additional security configurations for production
# 
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# In production, set these to True/appropriate values:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# -----------------------------------------------------------------------------
# JWT CONFIGURATION (if using JWT authentication)
# -----------------------------------------------------------------------------
# 
# JWT token expiration times (in minutes)
# 
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# -----------------------------------------------------------------------------
# RATE LIMITING (Optional)
# -----------------------------------------------------------------------------
# 
# Configure API rate limiting to prevent abuse
# 
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
